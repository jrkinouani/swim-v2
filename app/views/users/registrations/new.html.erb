<div class="container">
  <div class="row">
    <div class="col-md-offset-4 col-md-4" id="page_signup">
<h2>Bienvenue sur Swimnatation</h2><br> <h4>Créer un compte</h4>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <label for="">Votre prénom</label>
    <br />
    <%= f.text_field :first_name, autofocus: true,class:"form-control"  %>
  </div>

  <div class="field">
  <label for="">Votre nom </label><br />
    <%= f.text_field :last_name, autofocus: true,class:"form-control"  %>
  </div>

  <div class="field">
    <label for="">Votre email</label><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control"  %>
  </div>

  <div class="field">
  <label for="">Votre mot de passe</label>
    <% if @minimum_password_length %>
    <em> <br><br>8 caractères minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password",class:"form-control"  %>
  </div>

  <div class="field">
    <label for="">Confirmez votre mot de passe</label><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control"  %>
  </div>
<br>
  <div class="actions">
    <%= f.submit "Valider" %>
  </div>
<% end %>
<h5><%=link_to "Déjà inscrit ?, conectez-vous ",  new_user_session_path%></h5>
</div>
</div>
</div>
